<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.orgershov.building.AdminActivitey.UserManagmentActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="4"
        android:layout_alignParentTop="true">

        <Button
            android:layout_width="364dp"
            android:layout_height="wrap_content"
            android:text="ADD USER"
            android:onClick="MoveToAddUser"
            android:layout_weight="1"
            android:id="@+id/userManagementAddUrBTN" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="remove user"
            android:layout_weight="1"
            android:onClick="MoveToRemoveUser"
            android:id="@+id/userManagmentRemoveuserBTN" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="UPDATE USER"
            android:onClick="MoveToUpdateUser"
            android:layout_weight="1"
            android:id="@+id/userManagmentUpdateUserBTN" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="APROVE USER"
            android:layout_weight="1"
            android:onClick="MoveToAproveUser"
            android:id="@+id/usermanagmentAproveUserBTN" />
    </LinearLayout>
</RelativeLayout>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:paddingBottom="@dimen/activity_vertical_margin"
android:paddingLeft="@dimen/activity_horizontal_margin"
android:paddingRight="@dimen/activity_horizontal_margin"
android:paddingTop="@dimen/activity_vertical_margin"
tools:context="com.example.orgershov.building.AdminActivitey.ShowPaymentsActivity">



<ListView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/UsersMessageLV" />


<ImageButton android:id="@+id/btnNewMessage"
    android:layout_width="79dp"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:onClick="SendAmessage"
    android:layout_margin="5dip"
    android:layout_gravity="right|bottom"
    android:background="@drawable/green_mail_send_icon" />
</FrameLayout>